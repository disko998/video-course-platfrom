---
import CTAButton from './CTAButton.astro';

const features = [
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M15 10l4.553-2.276A1 1 0 0 1 21 8.618v6.764a1 1 0 0 1-1.447.894L15 14M5 18h8a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2z" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: '60+ Hours of In-Depth Tutorials',
        desc: 'Master Premiere Pro and After Effects from beginner to pro level. Create outstanding short-form content that stands out.',
        highlight: '60+ Hours',
        iconColor: 'text-red-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Personal Feedback by Milos',
        desc: 'Get detailed feedback directly from Milos through community posts and private messages to accelerate your growth.',
        highlight: 'Personal',
        iconColor: 'text-blue-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke="currentColor" stroke-width="2"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Social Media Mastery',
        desc: 'Learn to think like a professional, build your creator brand, and start working with your dream clients and brands.',
        highlight: 'Brand Building',
        iconColor: 'text-purple-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
            <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
            <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2"/>
            <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2"/>
            <polyline points="10,9 9,9 8,9" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'RAW + Project Files',
        desc: 'Access video files and project files for many tutorials, allowing you to follow along and practice with real assets.',
        highlight: 'Included',
        iconColor: 'text-green-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
            <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
            <polyline points="21,15 16,10 5,21" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Craft a Standout Portfolio',
        desc: 'Showcase your unique skills and create a portfolio that sets you apart from the competition to land premium clients.',
        highlight: 'Portfolio',
        iconColor: 'text-yellow-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87" stroke="currentColor" stroke-width="2"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Supportive Community',
        desc: 'Join a thriving community of creators who support, uplift, and collaborate with each other on their creative journey.',
        highlight: 'Community',
        iconColor: 'text-indigo-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Stay Future-Proof',
        desc: 'Learn how to navigate the ever-changing creative industry with confidence and stay ahead of emerging trends.',
        highlight: 'Future-Ready',
        iconColor: 'text-orange-400'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M1 4v16l4-4h14a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H3a2 2 0 0 0-2 2z" stroke="currentColor" stroke-width="2"/>
            <path d="M9 9h.01M15 9h.01M12 12h.01" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        title: 'Regular Updates',
        desc: 'New modules added consistently to keep you ahead. Our community actively decides which tutorials come next.',
        highlight: 'Always Fresh',
        iconColor: 'text-cyan-400'
    },
];
---

<section class='relative w-full py-24 bg-gradient-to-br from-[#0a0a0f] via-[#1a1f2e] to-[#0f1419] overflow-hidden'>
    <!-- Subtle Background Elements -->
    <div class='absolute inset-0 opacity-10'>
        <div class='absolute top-20 left-20 w-64 h-64 bg-white/5 rounded-full blur-3xl'></div>
        <div class='absolute bottom-20 right-20 w-48 h-48 bg-white/3 rounded-full blur-3xl'></div>
        <div class='absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-white/2 rounded-full blur-3xl'></div>
    </div>

    <div class='container max-w-screen-xl mx-auto px-4 relative z-10'>
        <!-- Section Header -->
        <div class='text-center mb-16'>
            <div class='inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 mb-6'>
                <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-white/70">
                    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class='text-white/70 text-sm font-medium'>Complete Package</span>
            </div>
            
            <h2 class='text-3xl md:text-4xl font-bold text-white mb-6 leading-tight'>
                Everything You Need to 
                <span class='bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent'>
                    Succeed
                </span>
            </h2>
            
            <p class='text-white/70 text-lg max-w-3xl mx-auto'>
                With carefully structured content and comprehensive resources, the Klub kreatora ensures you 
                gain all the tools, techniques, and strategies needed to excel in video editing.
            </p>
        </div>

        <!-- Features Grid -->
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16'>
            {features.map((feature) => (
                <div class='group h-full'>
                    <div class='bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/8 transition-all duration-300 h-full flex flex-col'>
                        <!-- Icon and Highlight Badge -->
                        <div class='flex items-center justify-between mb-4'>
                            <div class='w-12 h-12 rounded-xl bg-white/10 border border-white/20 flex items-center justify-center'>
                                <div class={feature.iconColor} set:html={feature.icon} />
                            </div>
                            <div class='px-2 py-1 bg-gradient-to-r from-orange-500/20 to-yellow-500/20 border border-orange-400/30 rounded-full'>
                                <span class='text-orange-300 text-xs font-medium'>{feature.highlight}</span>
                            </div>
                        </div>
                        
                        <!-- Content -->
                        <div class='flex-1'>
                            <h3 class='text-white font-semibold mb-3 leading-tight text-base'>{feature.title}</h3>
                            <p class='text-white/70 text-sm leading-relaxed'>{feature.desc}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Bottom Section -->
        <div class='text-center'>
            <div class='bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 mb-8'>
                <h3 class='text-xl font-bold text-white mb-4'>
                    Ready to Transform Your Creative Journey?
                </h3>
                <p class='text-white/70 mb-6 max-w-2xl mx-auto'>
                    Join thousands of creators who have already elevated their skills and built successful careers 
                    through our comprehensive program.
                </p>
                
                <!-- CTA -->
                <CTAButton href='#pricing'>Join the Klub kreatora Now</CTAButton>
            </div>

            <!-- Trust Indicators -->
            <div class='flex flex-wrap justify-center items-center gap-8 text-white/60'>
                <div class='flex items-center gap-2'>
                    <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-green-400">
                        <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class='text-sm'>Instant Access</span>
                </div>
                <div class='flex items-center gap-2'>
                    <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-blue-400">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2"/>
                        <polyline points="22,4 12,14.01 9,11.01" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <span class='text-sm'>Lifetime Updates</span>
                </div>
                <div class='flex items-center gap-2'>
                    <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-orange-400">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <span class='text-sm'>Premium Content</span>
                </div>
            </div>
        </div>
    </div>
</section>
