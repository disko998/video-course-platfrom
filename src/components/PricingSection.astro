---
const plans = [
    {
        title: 'Pro',
        price: '$397',
        oldPrice: '$597',
        period: 'one-time',
        savings: 'Save $200',
        features: [
            '70h+ of Tutorials',
            'Global Creative Community',
            'Exclusive Tutorials & Live Sessions',
            'Downloadable Project Files & Footage',
            'All new tutorials included',
            'Lifetime access',
            'Monthly Live Calls + Q&A',
            '14 Days Money-Back Guarantee',
        ],
        cta: 'Become a member',
        popular: true,
        badge: 'Most Popular',
    },
    {
        title: 'Basic',
        subtitle: '',
        price: '$197',
        oldPrice: '$397',
        period: 'per month',
        savings: 'Save $200',
        features: [
            '50h+ of Tutorials',
            'Global Creative Community',
            'Exclusive Tutorials & Live Sessions',
            'Downloadable Project Files & Footage',
            'Lifetime access',
            '14 Days Money-Back Guarantee',
        ],
        cta: 'Become a member',
        popular: false,
    },
];
---

<section
    id='pricing'
    class='relative w-full py-24 bg-gradient-to-br from-[#0a0a0f] via-[#1a1f2e] to-[#0f1419] overflow-hidden'
>
    <!-- Subtle Background Elements -->
    <div class='absolute inset-0 opacity-10'>
        <div
            class='absolute top-32 left-32 w-64 h-64 bg-white/5 rounded-full blur-3xl'
        >
        </div>
        <div
            class='absolute bottom-32 right-32 w-48 h-48 bg-white/3 rounded-full blur-3xl'
        >
        </div>
    </div>

    <div class='container max-w-screen-xl mx-auto px-4 relative z-10'>
        <div class='text-center mb-16'>
            <h2 class='mb-6 text-3xl md:text-4xl font-bold'>
                Choose Your Path to Success
            </h2>
            <p class='text-white/70 text-lg max-w-2xl mx-auto'>
                Start your creative journey today with our exclusive lifetime
                offer or flexible payment plan
            </p>
        </div>

        <div class='grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-5xl mx-auto'>
            {
                plans.map((plan, idx) => (
                    <div
                        class={`relative bg-gradient-to-br ${plan.popular ? 'from-[#181e2a]/95 to-[#232946]/95 border-primary/30' : 'from-[#181e2a]/90 to-[#1a1f2e]/90 border-white/10'} border-2 rounded-3xl p-8 md:p-10 shadow-2xl backdrop-blur-sm hover:shadow-3xl transition-all duration-300 hover:-translate-y-2 group`}
                    >
                        {/* Popular badge */}
                        {plan.popular && (
                            <div class='absolute -top-4 left-1/2 -translate-x-1/2'>
                                <div class='bg-gradient-to-r from-orange-500 to-yellow-500 px-6 py-2 rounded-full text-white text-sm font-semibold shadow-lg'>
                                    {plan.badge}
                                </div>
                            </div>
                        )}

                        {/* Decorative elements */}
                        <div class='absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-full blur-2xl group-hover:bg-primary/20 transition-colors' />
                        <div class='absolute bottom-0 left-0 w-24 h-24 bg-accent/10 rounded-full blur-xl group-hover:bg-accent/20 transition-colors' />

                        <div class='relative z-10'>
                            {/* Plan header */}
                            <div class='text-center mb-8'>
                                <h3 class='text-xl md:text-2xl font-bold text-white mb-2'>
                                    {plan.title}
                                </h3>
                                {plan.subtitle && (
                                    <p class='text-white/60 text-sm'>
                                        {plan.subtitle}
                                    </p>
                                )}
                            </div>

                            {/* Pricing */}
                            <div class='text-center mb-8'>
                                <div class='flex items-baseline justify-center gap-2 mb-2'>
                                    <span class='text-4xl md:text-5xl font-bold text-white'>
                                        {plan.price}
                                    </span>
                                    <span class='text-white/60 text-lg'>
                                        {plan.period}
                                    </span>
                                </div>
                                <div class='flex items-center justify-center gap-3'>
                                    <span class='text-white/50 line-through text-lg'>
                                        {plan.oldPrice}
                                    </span>
                                    <span class='bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm font-medium'>
                                        {plan.savings}
                                    </span>
                                </div>
                            </div>

                            {/* Features */}
                            <div class='mb-8'>
                                <h4 class='text-white font-semibold mb-4 text-center'>
                                    Everything included:
                                </h4>
                                <ul class='space-y-3'>
                                    {plan.features.map(feature => (
                                        <li class='flex items-start gap-3 text-white/90'>
                                            <div class='flex-shrink-0 w-5 h-5 rounded-full bg-primary/20 flex items-center justify-center mt-0.5'>
                                                <svg
                                                    class='w-3 h-3 text-primary'
                                                    fill='currentColor'
                                                    viewBox='0 0 20 20'
                                                >
                                                    <path
                                                        fill-rule='evenodd'
                                                        d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
                                                        clip-rule='evenodd'
                                                    />
                                                </svg>
                                            </div>
                                            <span class='leading-relaxed'>
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            {/* CTA Button */}
                            <div class='text-center'>
                                <a
                                    href='/contact'
                                    class={`inline-block w-full px-8 py-4 rounded-xl font-semibold text-lg shadow-xl transition-all duration-300 transform hover:scale-105 ${
                                        plan.popular
                                            ? 'bg-gradient-to-r from-orange-500 to-yellow-500 hover:from-yellow-500 hover:to-orange-500 text-white hover:shadow-orange-500/25'
                                            : 'bg-white text-gray-900 hover:bg-gray-100'
                                    } hover:shadow-2xl`}
                                >
                                    {plan.cta}
                                </a>
                                <p class='text-white/60 text-xs mt-3'>
                                    âœ“ Secure payment
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        {/* Trust indicators */}
        <div class='mt-16 text-center'>
            <div
                class='flex flex-col md:flex-row items-center justify-center gap-8 text-white/60'
            >
                <div class='flex items-center gap-2'>
                    <svg
                        class='w-5 h-5 text-green-400'
                        fill='currentColor'
                        viewBox='0 0 20 20'
                    >
                        <path
                            fill-rule='evenodd'
                            d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
                            clip-rule='evenodd'></path>
                    </svg>
                    <span class='text-sm'>Secure Payment</span>
                </div>
                <div class='flex items-center gap-2'>
                    <svg
                        class='w-5 h-5 text-green-400'
                        fill='currentColor'
                        viewBox='0 0 20 20'
                    >
                        <path
                            fill-rule='evenodd'
                            d='M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z'
                            clip-rule='evenodd'></path>
                    </svg>
                    <span class='text-sm'>Instant Access</span>
                </div>
                <div class='flex items-center gap-2'>
                    <svg
                        class='w-5 h-5 text-green-400'
                        fill='currentColor'
                        viewBox='0 0 20 20'
                    >
                        <path
                            fill-rule='evenodd'
                            d='M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z'
                            clip-rule='evenodd'></path>
                    </svg>
                    <span class='text-sm'>1,500+ Happy Members</span>
                </div>
            </div>
        </div>

        {/* FAQ teaser */}
        <div class='mt-12 text-center'>
            <p class='text-white/60 text-sm'>
                Have questions? <a
                    href='/#faq'
                    class='text-primary hover:text-accent transition-colors underline'
                    >View our FAQ</a
                > or contact support
            </p>
        </div>
    </div>
</section>
