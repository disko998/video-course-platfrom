---
const testimonials = [
    {
        name: 'Sarah Chen',
        role: 'Content Creator',
        company: 'TechFlow Media',
        quote: 'The Creators Club completely transformed my approach to video editing. Within 3 months, my engagement increased by 400% and I landed my first major brand partnership.',
        img: 'https://randomuser.me/api/portraits/women/32.jpg',
        rating: 5,
        featured: true,
    },
    {
        name: 'Marcus Johnson',
        role: 'Freelance Editor',
        quote: 'The community and feedback system is incredible. I went from struggling freelancer to booking clients 3 months in advance.',
        img: 'https://randomuser.me/api/portraits/men/25.jpg',
        rating: 5,
    },
    {
        name: 'Elena Rodriguez',
        role: 'YouTube Creator',
        quote: 'Best investment I made for my creative career. The tutorials are so detailed and practical.',
        img: 'https://randomuser.me/api/portraits/women/28.jpg',
        rating: 5,
    },
    {
        name: 'David Kim',
        role: 'Social Media Manager',
        quote: 'The cutting-edge techniques taught here are years ahead of what you find elsewhere.',
        img: 'https://randomuser.me/api/portraits/men/33.jpg',
        rating: 5,
    },
    {
        name: 'Priya Patel',
        role: 'Brand Designer',
        quote: 'From beginner to pro in 6 months. The step-by-step approach made all the difference.',
        img: 'https://randomuser.me/api/portraits/women/41.jpg',
        rating: 5,
    },
    {
        name: 'Alex Thompson',
        role: 'Digital Marketer',
        quote: 'The personal feedback from Keanu is worth the price alone. Incredible value.',
        img: 'https://randomuser.me/api/portraits/men/42.jpg',
        rating: 5,
    },
];

const featuredTestimonial = testimonials.find(t => t.featured);
const regularTestimonials = testimonials.filter(t => !t.featured);
---

<section id='testimonials' class="relative w-full py-24 bg-gradient-to-br from-[#0a0a0f] via-[#1a1f2e] to-[#0f1419] overflow-hidden">
    <!-- Subtle Background Elements -->
    <div class='absolute inset-0 opacity-10'>
        <div class='absolute top-32 left-32 w-64 h-64 bg-white/5 rounded-full blur-3xl'></div>
        <div class='absolute bottom-32 right-32 w-48 h-48 bg-white/3 rounded-full blur-3xl'></div>
    </div>
    
    <div class="container max-w-screen-xl mx-auto px-4 relative z-10">
        <div class="text-center mb-16">
            <h2 class="mb-6 text-3xl md:text-4xl font-bold">
                What our creators are saying
            </h2>
            <p class="text-white/70 text-lg max-w-2xl mx-auto">
                Join thousands of creators who've transformed their skills and careers with the Creators Club
            </p>
        </div>

        <!-- Featured Testimonial -->
        {featuredTestimonial && (
            <div class="mb-16">
                <div class="bg-gradient-to-r from-[#181e2a]/90 to-[#232946]/90 border border-white/10 rounded-3xl p-8 md:p-12 shadow-2xl backdrop-blur-sm relative overflow-hidden">
                    <!-- Decorative elements -->
                    <div class="absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-full blur-3xl"></div>
                    <div class="absolute bottom-0 left-0 w-24 h-24 bg-accent/10 rounded-full blur-2xl"></div>
                    
                    <div class="relative z-10 flex flex-col md:flex-row items-center gap-8">
                        <div class="flex-shrink-0">
                            <img
                                src={featuredTestimonial.img}
                                alt={featuredTestimonial.name}
                                class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover border-4 border-primary/30 shadow-lg"
                            />
                        </div>
                        <div class="flex-1 text-center md:text-left">
                            <!-- Stars -->
                            <div class="flex justify-center md:justify-start mb-4">
                                {Array.from({ length: featuredTestimonial.rating }).map(() => (
                                    <svg class="w-6 h-6 text-primary fill-current" viewBox="0 0 24 24">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                    </svg>
                                ))}
                            </div>
                            <blockquote class="text-xl md:text-2xl text-white mb-6 leading-relaxed">
                                "{featuredTestimonial.quote}"
                            </blockquote>
                            <div>
                                <div class="font-semibold text-white text-lg">{featuredTestimonial.name}</div>
                                <div class="text-primary font-medium">{featuredTestimonial.role}</div>
                                {featuredTestimonial.company && (
                                    <div class="text-white/60 text-sm">{featuredTestimonial.company}</div>
                                )}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        )}

        <!-- Regular Testimonials Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {regularTestimonials.map((testimonial, idx) => (
                <div class="bg-[#181e2a]/90 border border-white/10 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:border-white/20 hover:-translate-y-1 group">
                    <!-- Stars -->
                    <div class="flex mb-4">
                        {Array.from({ length: testimonial.rating }).map(() => (
                            <svg class="w-4 h-4 text-primary fill-current" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                        ))}
                    </div>
                    
                    <blockquote class="text-white/90 mb-6 leading-relaxed group-hover:text-white transition-colors">
                        "{testimonial.quote}"
                    </blockquote>
                    
                    <div class="flex items-center gap-3">
                        <img
                            src={testimonial.img}
                            alt={testimonial.name}
                            class="w-12 h-12 rounded-full object-cover border-2 border-white/20"
                        />
                        <div>
                            <div class="font-semibold text-white text-sm">{testimonial.name}</div>
                            <div class="text-primary text-xs font-medium">{testimonial.role}</div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Trust indicators -->
        <div class="mt-16 text-center">
            <div class="flex flex-col md:flex-row items-center justify-center gap-8 text-white/60">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm">1,500+ Active Members</span>
                </div>
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                    </svg>
                    <span class="text-sm">4.9/5 Average Rating</span>
                </div>
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-sm">Verified Reviews</span>
                </div>
            </div>
        </div>
    </div>
</section>
