---
// You can replace these with real brand logo imports later
const brands = Array(5).fill(null);
---

<div class='relative w-full py-6 bg-transparent'>
    <div class='container max-w-screen-lg'>
        <p class='text-center mb-8'>Brands we've worked with:</p>
        <div
            class='whitespace-nowrap gap-10 flex items-center animate-brands-scroll'
        >
            {
                brands.map((_, i) => (
                    <span class='inline-flex items-center justify-center mx-4 rounded-xl bg-white/10 border border-white/20 shadow-sm'>
                        <svg
                            width='100'
                            height='100'
                            viewBox='0 0 100 100'
                            fill='none'
                            xmlns='http://www.w3.org/2000/svg'
                        />
                    </span>
                ))
            }
            {/* Duplicate for seamless loop */}
            {
                brands.map((_, i) => (
                    <span class='inline-flex items-center justify-center mx-4 rounded-xl bg-white/10 border border-white/20 shadow-sm'>
                        <svg
                            width='100'
                            height='100'
                            viewBox='0 0 100 100'
                            fill='none'
                            xmlns='http://www.w3.org/2000/svg'
                        />
                    </span>
                ))
            }
        </div>
    </div>
</div>

<style>
    @keyframes brands-scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
    .animate-brands-scroll {
        animation: brands-scroll 10s linear infinite;
        will-change: transform;
    }
</style>
