---
import CTAButton from './CTAButton.astro';

const features = [
    {
        icon: `<svg width="36" height="36" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="36" height="36" rx="12" fill="white" fill-opacity="0.12"/><path d="M12 24l6-12 6 12" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
        title: 'Learn professional video editing:',
        desc: 'Master Premiere Pro and After Effects to create stunning content that captivates and engages your audience.',
    },
    {
        icon: `<svg width="36" height="36" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="36" height="36" rx="12" fill="white" fill-opacity="0.12"/><path d="M18 12v12M12 18h12" stroke="white" stroke-width="2" stroke-linecap="round"/></svg>`,
        title: 'Build your creator <br /> brand:',
        desc: 'Grow your following and attract brands with content that showcases your unique editing style and creativity.',
    },
    {
        icon: `<svg width="36" height="36" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="36" height="36" rx="12" fill="white" fill-opacity="0.12"/><path d="M12 24c0-3.314 2.686-6 6-6s6 2.686 6 6" stroke="white" stroke-width="2" stroke-linecap="round"/><circle cx="18" cy="16" r="4" stroke="white" stroke-width="2"/></svg>`,
        title: 'Transform your passion into profit:',
        desc: 'Develop a standout portfolio, gain insider strategies, and land high-paying collaborations with global brands.',
    },
];
---

<section class='w-full py-12 bg-transparent'>
    <div class='container max-w-screen-lg mx-auto'>
        <div
            class='flex flex-col md:flex-row gap-8 md:gap-6 justify-center items-stretch'
        >
            {
                features.map(f => (
                    <div class='flex-1 gap-4 text-left bg-white/5 border border-white/10 rounded-2xl p-7 flex flex-col items-center  shadow-sm'>
                        <span set:html={f.icon} />
                        <h4 class='w-full' set:html={f.title} />
                        <p class='leading-6 '>{f.desc}</p>
                    </div>
                ))
            }
        </div>

        <div class='flex justify-center mt-10'>
            <CTAButton> Start Creating Now! </CTAButton>
        </div>
    </div>
</section>
