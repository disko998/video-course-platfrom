---
const stories = [
    {
        before: '179 followers, no engagement, no momentum.',
        after: '10,000+ followers, brand collaborations, recognition.',
        img: 'https://randomuser.me/api/portraits/men/45.jpg',
        name: 'Oleks',
        quote: 'In just 6 months, my life changed completely.',
    },
    {
        before: 'Freelancing for years, few clients, low visibility.',
        after: '30,000+ followers, client inquiries flooding in.',
        img: 'https://randomuser.me/api/portraits/men/46.jpg',
        name: 'Dmytro',
        quote: 'The Creators Club gave me the confidence, skills, and strategy to break through.',
    },
    {
        before: 'Stuck, questioning if my content mattered.',
        after: 'Recognition, growth, and new opportunities.',
        img: 'https://randomuser.me/api/portraits/women/47.jpg',
        name: 'Anna',
        quote: 'I finally feel like my work is seen and valued.',
    },
];
---

<section class='w-full py-20'>
    <div class='container max-w-screen-xl mx-auto px-4'>
        <h2 class='mb-10 text-3xl md:text-4xl font-bold text-center'>
            Let's see the amazing results of our creators
        </h2>
        <div class='grid grid-cols-1 md:grid-cols-3 gap-8 mt-10'>
            {
                stories.map(s => (
                    <div class='bg-[#181e2a]/90 border border-white/10 rounded-2xl p-8 flex flex-col items-center text-center shadow-lg'>
                        <img
                            src={s.img}
                            alt={s.name}
                            class='w-24 h-24 rounded-full object-cover mb-4 border-4 border-white/20'
                        />
                        <div class='text-white/80 text-sm mb-2'>
                            <span class='font-bold'>Before:</span> {s.before}
                        </div>
                        <div class='text-white/80 text-sm mb-2'>
                            <span class='font-bold'>After:</span> {s.after}
                        </div>
                        <div class='italic text-white mb-2'>"{s.quote}"</div>
                        <div class='text-white/60 text-xs'>{s.name}</div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

