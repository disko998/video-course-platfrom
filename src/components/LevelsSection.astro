---
const levels = [
    {
        video: 'https://www.w3schools.com/html/mov_bbb.mp4',
        title: 'Beginners',
        subtitle: 'Start Your Journey',
        desc: "Get a clear, step-by-step guide that breaks down the overwhelming world of editing into manageable, actionable steps. Build confidence and master essential skills without ever feeling lost.",
        skills: ['Basic Cuts & Transitions', 'Color Correction', 'Audio Sync', 'Export Settings'],
        color: 'from-green-500 to-emerald-500',
        bgColor: 'from-green-500/10 to-emerald-500/10',
        borderColor: 'border-green-400/30',
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-6 h-6">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
        </svg>`
    },
    {
        video: 'https://www.w3schools.com/html/movie.mp4',
        title: 'Intermediates',
        subtitle: 'Level Up Your Skills',
        desc: 'Learn advanced workflows that simplify complex editing tasks, refine your unique style, and build a Creator Brand to position yourself as a top-notch creator ready for high-paying opportunities.',
        skills: ['Advanced Effects', 'Motion Graphics', 'Brand Development', 'Client Management'],
        color: 'from-blue-500 to-cyan-500',
        bgColor: 'from-blue-500/10 to-cyan-500/10',
        borderColor: 'border-blue-400/30',
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-6 h-6">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke="currentColor" stroke-width="2"/>
        </svg>`
    },
    {
        video: 'https://www.w3schools.com/html/mov_bbb.mp4',
        title: 'Advanced',
        subtitle: 'Master the Craft',
        desc: 'Push your limits with cutting-edge techniques like Augmented Reality Editing, Car edits, and Talking Head Animations. Master modern techniques to stay ahead of the competition.',
        skills: ['AR Effects', 'Advanced Animation', 'Complex Compositing', 'Industry Trends'],
        color: 'from-purple-500 to-pink-500',
        bgColor: 'from-purple-500/10 to-pink-500/10',
        borderColor: 'border-purple-400/30',
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-6 h-6">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/>
        </svg>`
    },
];
---

<section class='relative w-full py-24 bg-gradient-to-br from-[#0a0a0f] via-[#1a1f2e] to-[#0f1419] overflow-hidden'>
    <!-- Animated Background Elements -->
    <div class='absolute inset-0 opacity-20'>
        <div class='absolute top-20 left-20 w-64 h-64 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-full blur-3xl animate-pulse'></div>
        <div class='absolute bottom-20 right-20 w-48 h-48 bg-gradient-to-r from-green-500/20 to-cyan-500/20 rounded-full blur-3xl animate-pulse' style='animation-delay: 1s'></div>
        <div class='absolute top-1/2 left-1/4 w-32 h-32 bg-gradient-to-r from-pink-500/20 to-orange-500/20 rounded-full blur-3xl animate-pulse' style='animation-delay: 2s'></div>
    </div>

    <!-- Floating Particles -->
    <div class='absolute inset-0 overflow-hidden pointer-events-none'>
        <div class='absolute top-1/4 left-1/4 w-2 h-2 bg-white/30 rounded-full animate-bounce' style='animation-delay: 0.5s'></div>
        <div class='absolute top-3/4 right-1/3 w-1 h-1 bg-white/40 rounded-full animate-bounce' style='animation-delay: 1.5s'></div>
        <div class='absolute top-1/2 right-1/4 w-1.5 h-1.5 bg-white/20 rounded-full animate-bounce' style='animation-delay: 2.5s'></div>
    </div>

    <div class='container max-w-screen-xl mx-auto px-4 relative z-10'>
        <!-- Section Header -->
        <div class='text-center mb-20'>
            <div class='inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 mb-6 animate-fade-in'>
                <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-white/70">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
                </svg>
                <span class='text-white/70 text-sm font-medium'>Your Journey</span>
            </div>
            
            <h2 class='text-3xl md:text-5xl font-bold text-white mb-6 leading-tight animate-slide-up'>
                No Matter Where You Are,
                <br class='hidden md:block' />
                <span class='bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent'>
                    We Meet You There
                </span>
            </h2>
            
            <p class='text-white/70 text-lg max-w-3xl mx-auto animate-slide-up' style='animation-delay: 0.2s'>
                From complete beginner to industry professional, our structured learning path 
                adapts to your skill level and helps you rise higher.
            </p>
        </div>

        <!-- Levels Grid -->
        <div class='space-y-16'>
            {levels.map((level, idx) => (
                <div class={`group animate-slide-up`} style={`animation-delay: ${0.3 + idx * 0.2}s`}>
                    <div class={`relative grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${idx % 2 === 1 ? 'lg:grid-flow-col-dense' : ''}`}>
                        <!-- Content Side -->
                        <div class={`${idx % 2 === 1 ? 'lg:col-start-2' : ''} space-y-6`}>
                            <!-- Level Badge -->
                            <div class='flex items-center gap-4 mb-6'>
                                <div class={`w-16 h-16 rounded-2xl bg-gradient-to-r ${level.color} flex items-center justify-center text-white font-bold text-2xl shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                                    {idx + 1}
                                </div>
                                <div>
                                    <div class='text-white/60 text-sm font-medium uppercase tracking-wider'>{level.subtitle}</div>
                                    <h3 class='text-2xl md:text-3xl font-bold text-white'>{level.title}</h3>
                                </div>
                            </div>

                            <!-- Description -->
                            <p class='text-white/80 text-lg leading-relaxed'>
                                {level.desc}
                            </p>

                            <!-- Skills List -->
                            <div class='space-y-3'>
                                <h4 class='text-white font-semibold mb-3'>What You'll Master:</h4>
                                <div class='grid grid-cols-2 gap-3'>
                                    {level.skills.map((skill, skillIdx) => (
                                        <div class={`flex items-center gap-2 p-3 bg-gradient-to-r ${level.bgColor} border ${level.borderColor} rounded-xl group-hover:bg-opacity-80 transition-all duration-300`} style={`animation-delay: ${0.5 + skillIdx * 0.1}s`}>
                                            <div class={`text-white/80`} set:html={level.icon} />
                                            <span class='text-white/90 text-sm font-medium'>{skill}</span>
                                        </div>
                                    ))}
                                </div>
                            </div>

                            <!-- Progress Indicator -->
                            <div class='pt-4'>
                                <div class='flex items-center justify-between mb-2'>
                                    <span class='text-white/60 text-sm'>Completion Rate</span>
                                    <span class='text-white font-semibold'>{95 - idx * 5}%</span>
                                </div>
                                <div class='w-full bg-white/10 rounded-full h-2 overflow-hidden'>
                                    <div class={`h-full bg-gradient-to-r ${level.color} rounded-full transition-all duration-1000 group-hover:animate-pulse`} 
                                         style={`width: ${95 - idx * 5}%; animation-delay: ${1 + idx * 0.3}s`}></div>
                                </div>
                            </div>
                        </div>

                        <!-- Video Side -->
                        <div class={`${idx % 2 === 1 ? 'lg:col-start-1' : ''} relative`}>
                            <div class='relative group/video'>
                                <!-- Video Container -->
                                <div class={`relative rounded-2xl overflow-hidden bg-gradient-to-r ${level.bgColor} p-1 group-hover:scale-105 transition-transform duration-500`}>
                                    <video
                                        src={level.video}
                                        controls
                                        class='w-full h-64 md:h-80 rounded-xl object-cover shadow-2xl'
                                        poster='data:image/svg+xml;base64,'
                                    />
                                </div>

                                <!-- Floating Play Button -->
                                <div class={`absolute inset-0 flex items-center justify-center pointer-events-none`}>
                                    <div class={`w-16 h-16 rounded-full bg-gradient-to-r ${level.color} flex items-center justify-center shadow-2xl group-hover/video:scale-110 transition-transform duration-300 opacity-90`}>
                                        <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-white ml-1">
                                            <path d="M8 5v14l11-7z"/>
                                        </svg>
                                    </div>
                                </div>

                                <!-- Decorative Elements -->
                                <div class={`absolute -top-4 -right-4 w-8 h-8 bg-gradient-to-r ${level.color} rounded-full opacity-60 group-hover:animate-ping`}></div>
                                <div class={`absolute -bottom-4 -left-4 w-6 h-6 bg-gradient-to-r ${level.color} rounded-full opacity-40 group-hover:animate-ping`} style='animation-delay: 0.5s'></div>
                            </div>
                        </div>
                    </div>

                    <!-- Connecting Line (except for last item) -->
                    {idx < levels.length - 1 && (
                        <div class='flex justify-center mt-16'>
                            <div class='w-px h-16 bg-gradient-to-b from-white/20 to-transparent animate-pulse'></div>
                        </div>
                    )}
                </div>
            ))}
        </div>

        <!-- Bottom CTA -->
        <div class='text-center mt-20 animate-slide-up' style='animation-delay: 1.5s'>
            <div class='inline-block bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8'>
                <h3 class='text-xl font-bold text-white mb-4'>
                    Ready to Start Your Journey?
                </h3>
                <p class='text-white/70 mb-6 max-w-md mx-auto'>
                    Join thousands of creators who have transformed their skills and built successful careers.
                </p>
                
                <a href="#pricing" class='inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-yellow-500 hover:from-yellow-500 hover:to-orange-500 text-white font-semibold rounded-full transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-orange-500/25'>
                    <span>Choose Your Level</span>
                    <svg viewBox="0 0 24 24" fill="none" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1">
                        <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    @keyframes slide-up {
        from { 
            opacity: 0; 
            transform: translateY(30px); 
        }
        to { 
            opacity: 1; 
            transform: translateY(0); 
        }
    }
    
    .animate-fade-in {
        animation: fade-in 0.8s ease-out forwards;
        opacity: 0;
    }
    
    .animate-slide-up {
        animation: slide-up 0.8s ease-out forwards;
        opacity: 0;
    }
    
    /* Hover animations */
    .group:hover .group-hover\:animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    .group:hover .group-hover\:animate-ping {
        animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
    }
</style>
