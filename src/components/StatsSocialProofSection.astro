---
const stats = [
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        number: '12,000+',
        label: 'Active Students',
        description: 'Learning and growing daily',
        bgGradient: 'from-blue-500/20 to-cyan-500/20',
        bgGradientHover: 'group-hover:from-blue-500/30 group-hover:to-cyan-500/30',
        border: 'border-blue-400/30',
        iconColor: 'text-blue-400',
        iconColorHover: 'group-hover:text-blue-300'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/>
        </svg>`,
        number: '4.9/5',
        label: 'Average Rating',
        description: 'From verified reviews',
        bgGradient: 'from-yellow-500/20 to-orange-500/20',
        bgGradientHover: 'group-hover:from-yellow-500/30 group-hover:to-orange-500/30',
        border: 'border-yellow-400/30',
        iconColor: 'text-yellow-400',
        iconColorHover: 'group-hover:text-yellow-300'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2"/>
            <polyline points="22,4 12,14.01 9,11.01" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        number: '85%',
        label: 'Success Rate',
        description: 'Land their first paid client',
        bgGradient: 'from-purple-500/20 to-pink-500/20',
        bgGradientHover: 'group-hover:from-purple-500/30 group-hover:to-pink-500/30',
        border: 'border-purple-400/30',
        iconColor: 'text-purple-400',
        iconColorHover: 'group-hover:text-purple-300'
    },
    {
        icon: `<svg viewBox="0 0 24 24" fill="none" class="w-8 h-8">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="currentColor" stroke-width="2"/>
        </svg>`,
        number: '$2,500+',
        label: 'Average Monthly Earnings',
        description: 'After 6 months in the program',
        bgGradient: 'from-green-500/20 to-emerald-500/20',
        bgGradientHover: 'group-hover:from-green-500/30 group-hover:to-emerald-500/30',
        border: 'border-green-400/30',
        iconColor: 'text-green-400',
        iconColorHover: 'group-hover:text-green-300'
    }
];

const testimonials = [
    {
        quote: "The Creators Club completely transformed my approach to video editing. I went from struggling freelancer to landing my dream client within 3 months.",
        author: "Sarah M.",
        role: "Video Editor & Content Creator",
        since: "Member since March 2024"
    },
    {
        quote: "I never thought I could build a sustainable income from video editing. The community support and structured learning path made all the difference.",
        author: "Marcus T.",
        role: "Social Media Manager",
        since: "Member since January 2024"
    },
    {
        quote: "The techniques I learned here helped me increase my rates by 300%. My clients love the quality and creativity of my work now.",
        author: "Elena R.",
        role: "Freelance Video Editor",
        since: "Member since June 2024"
    }
];
---

<section class='relative w-full py-24 bg-gradient-to-br from-[#0a0a0f] via-[#1a1f2e] to-[#0f1419] overflow-hidden'>
    <!-- Subtle Background Elements -->
    <div class='absolute inset-0 opacity-10'>
        <div class='absolute top-20 left-20 w-64 h-64 bg-white/5 rounded-full blur-3xl'></div>
        <div class='absolute bottom-20 right-20 w-48 h-48 bg-white/3 rounded-full blur-3xl'></div>
    </div>

    <div class='container max-w-screen-xl mx-auto px-4 relative z-10'>
        <!-- Section Header -->
        <div class='text-center mb-16'>
            <div class='inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 mb-6'>
                <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-white/70">
                    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class='text-white/70 text-sm font-medium'>Proven Results</span>
            </div>
            
            <h2 class='text-3xl md:text-4xl font-bold text-white mb-6 leading-tight'>
                Real Impact, 
                <span class='bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent'>
                    Real Success
                </span>
            </h2>
            
            <p class='text-white/70 text-lg max-w-2xl mx-auto'>
                Our community of creators is achieving remarkable results. Here's the proof that our approach works.
            </p>
        </div>

        <!-- Stats Grid -->
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20'>
            {stats.map((stat) => (
                <div class='group'>
                    <div class='bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 text-center hover:bg-white/8 transition-all duration-300'>
                        <!-- Icon -->
                        <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${stat.bgGradient} ${stat.bgGradientHover} border ${stat.border} flex items-center justify-center mx-auto mb-4 transition-all duration-300`}>
                            <div class={`${stat.iconColor} ${stat.iconColorHover} transition-colors duration-300`} set:html={stat.icon} />
                        </div>
                        
                        <!-- Number -->
                        <div class='text-3xl font-bold text-white mb-2'>{stat.number}</div>
                        
                        <!-- Label -->
                        <div class='text-white font-medium mb-1'>{stat.label}</div>
                        
                        <!-- Description -->
                        <div class='text-white/60 text-sm'>{stat.description}</div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Testimonials Section -->
        <div class='mb-16'>
            <div class='text-center mb-12'>
                <h3 class='text-2xl md:text-3xl font-bold text-white mb-4'>
                    What Our Students Say
                </h3>
                <p class='text-white/70'>Real stories from creators who transformed their careers</p>
            </div>

            <!-- Testimonials Grid -->
            <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
                {testimonials.map((testimonial) => (
                    <div class='group'>
                        <div class='bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/8 transition-all duration-300 h-full flex flex-col'>
                            <!-- Quote -->
                            <div class='flex-1 mb-6'>
                                <svg viewBox="0 0 24 24" fill="none" class="w-8 h-8 text-white/30 mb-4">
                                    <path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V20c0 1 0 1 1 1z" fill="currentColor"/>
                                    <path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3c0 1 0 1 1 1z" fill="currentColor"/>
                                </svg>
                                <p class='text-white/80 leading-relaxed italic'>
                                    "{testimonial.quote}"
                                </p>
                            </div>
                            
                            <!-- Author Info -->
                            <div class='border-t border-white/10 pt-4'>
                                <div class='text-white font-medium'>{testimonial.author}</div>
                                <div class='text-white/60 text-sm'>{testimonial.role}</div>
                                <div class='text-white/50 text-xs mt-1'>{testimonial.since}</div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Bottom CTA -->
        <div class='text-center'>
            <div class='inline-block bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8'>
                <h4 class='text-xl font-bold text-white mb-4'>
                    Ready to Join Our Success Stories?
                </h4>
                <p class='text-white/70 mb-6 max-w-md mx-auto'>
                    Become part of a community that's transforming careers and lives through video editing mastery.
                </p>
                
                <!-- CTA Button -->
                <div class='mb-6'>
                    <a href="#pricing" class='inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-yellow-500 hover:from-yellow-500 hover:to-orange-500 text-white font-semibold rounded-full transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-orange-500/25'>
                        <span>Start Your Journey Today</span>
                        <svg viewBox="0 0 24 24" fill="none" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1">
                            <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
                
                <!-- Trust Indicators -->
                <div class='flex flex-wrap justify-center items-center gap-6'>
                    <div class='flex items-center gap-2 text-white/60'>
                        <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-green-400">
                            <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <span class='text-sm'>30-Day Guarantee</span>
                    </div>
                    <div class='flex items-center gap-2 text-white/60'>
                        <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-blue-400">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2"/>
                            <polyline points="22,4 12,14.01 9,11.01" stroke="currentColor" stroke-width="2"/>
                        </svg>
                        <span class='text-sm'>Lifetime Access</span>
                    </div>
                    <div class='flex items-center gap-2 text-white/60'>
                        <svg viewBox="0 0 24 24" fill="none" class="w-4 h-4 text-purple-400">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
                            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" stroke="currentColor" stroke-width="2"/>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" stroke="currentColor" stroke-width="2"/>
                        </svg>
                        <span class='text-sm'>Expert Community</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
